<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ToDoMauiApp.ViewModel"
             xmlns:models="clr-namespace:ToDoMauiApp.Model"
             xmlns:enums="clr-namespace:ToDoMauiApp.Model.Enums"
             x:DataType="vm:AddToDoViewModel"
             x:Class="ToDoMauiApp.View.AddTodoPage"
             Title="{Binding PageTitle}">

    <VerticalStackLayout Spacing="10" Margin="20">
        <Label Text="Title" />
        <Entry Text="{Binding Title}" />
        <Label Text="Descirption" />
        <Editor Text="{Binding Description}" AutoSize="TextChanges"/>
        <Label Text="DeadLine" />
        <DatePicker Date="{Binding Deadline}"/>
        <Label Text="Importance" />
        <Picker SelectedItem="{Binding Importance}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type enums:Importance}">
                    <x:Static Member="enums:Importance.NotImportant" />
                    <x:Static Member="enums:Importance.Slightly" />
                    <x:Static Member="enums:Importance.Iportant" />
                    <x:Static Member="enums:Importance.Urgent" />
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Save" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>

</ContentPage>